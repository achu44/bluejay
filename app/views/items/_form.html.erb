<%= simple_form_for @item do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :place, :collection => ["Yard", "River", "Quad", "Other"], :selected => @item.place %>
  <%= f.input :tag_list, label: 'Tags (separated by commas)' %>
  <%= f.input :image %>
  <%= f.input :remote_image_url %>
  <%= f.input :description %>
  <%= f.button :submit, :class => "btn btn-info" %>
<% end %>


