<div class="row-fluid">
	<div class="span2">
	</div>

<div class="span10">


<h2>Comments, thoughts?</h2>
<br />

<%= simple_form_for :message, :url => {:controller => "contact", :action => "new"} do |f| %>
	<% if !user_signed_in? %>
	<%= f.input :name %>
	<%= f.input :email %>
	<% end %>
    <%= f.input :subject %> 
    <%= f.input :body, :input_html => {:rows => 5, :maxlength => 250} %>
    <%= f.button :submit, 'Submit' %>
<% end %>

<%= link_to 'Back', '/main' %>

</div> <!--closing div tag for 'span10 div' -->

</div> <!--closing div tag for 'row-fluid' -->


