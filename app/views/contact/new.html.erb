<div class="row-fluid">
	<div class="span2">
	</div>

<div class="span10">


<h2>Send Us an Email</h2>
<br />

<%= form_for @message, :url => contact_path, do |form| %>
	<fieldset class = "fields">
		<div class="field">
			<%= form.label :name %>
			<%= form.text_field :name %>
		</div>

		<div class="field">
			<%=form.label :email %>
			<%= form.text_field :email %>
		</div>
		<div class="field">
			<%= form.label :subject %>
			<%= form.text_field :subject %>
		</div>
		<div class="field">
			<%= form.label :body %>
			<%= form.text_area :body, :rows => 8, :columns => 30 %>
		</div>
	</fieldset>

	<fieldset class="actions">
		<%= form.submit "Send" %>
	</fieldset>
<% end %>

<%= link_to 'Back', '/main' %>

</div> <!--closing div tag for 'span10 div' -->

</div> <!--closing div tag for 'row-fluid' -->


